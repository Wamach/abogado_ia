# Variables de entorno para el Despacho Jurídico Virtual

# Base de datos
DATABASE_URL=sqlite:///./despacho.db

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Configuración del chatbot
CHATBOT_MODEL=local
MAX_RESPONSE_LENGTH=500

# Configuración de citas
MAX_CITAS_PER_DAY=8
WORK_START_HOUR=8
WORK_END_HOUR=18

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# Configuración de seguridad
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Información del despacho
DESPACHO_NOMBRE=Despacho Jurídico Virtual
DESPACHO_DIRECCION=Calle 123 #45-67, Centro Legal, Bogotá
DESPACHO_TELEFONO=+57 (1) 234-5678
DESPACHO_EMAIL=contacto@despachojuridico.com

# === WEBHOOKS CONFIGURACIÓN ===
# WhatsApp Business Cloud API
WHATSAPP_TOKEN=your_whatsapp_access_token_here
WHATSAPP_VERIFY_TOKEN=test_verify_token_123
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Facebook Messenger
MESSENGER_PAGE_TOKEN=your_messenger_page_token_here
MESSENGER_VERIFY_TOKEN=test_verify_token_messenger
MESSENGER_APP_SECRET=your_app_secret_here

# === PREDICCIÓN DE SENTENCIAS ===
# Modelo de predicción
MODEL_PATH=./models/
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# === NGROK CONFIGURACIÓN ===
# URLs públicas (se actualizan automáticamente)
NGROK_CHATBOT_URL=https://your-ngrok-url.ngrok.io
NGROK_WEBHOOK_URL=https://your-webhook-ngrok-url.ngrok.io
NGROK_PREDICTION_URL=https://your-prediction-ngrok-url.ngrok.io

# === CONFIGURACIÓN DE PUERTOS ===
CHATBOT_PORT=8000
WEBHOOK_PORT=8002
PREDICTION_PORT=8003
GRADIO_PORT=7860
